.archives-wrap
  position relative
.archives
  clearfix()
  @media mq-tablet
    margin 0 0 spacing-unit (spacing-unit * -1)
.archive-article
  &:nth-child(even)
    background #eee
  @media mq-tablet
    float left
    margin-top spacing-unit
    width 25%
    &:nth-child(even)
      background transparent
  .archive-article-inner
    height 100%
    overflow hidden
    background-repeat no-repeat
    background-position 50% 50%
    background-size cover
    @media mq-tablet
      position relative
      margin-left spacing-unit
      height 200px
      mask()
    .archive-article-header
      padding spacing-unit
      height 100%
      background rgba(255,255,255,.8)
    .archive-article-year
    .archive-article-date
      position relative
      z-index 100
      font-size font-size-small
    .archive-article-title
      position relative
      z-index 100
      margin 0
      font-size font-size
      word-break break-all
      overflow hidden